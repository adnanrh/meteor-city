<h2 class="text-2xl font-bold mb-4 text-center">Log in</h2>

<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow-md">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
    <div>
      <%= f.label :email, class: "block font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: form_field_classes %>
    </div>

    <div>
      <%= f.label :password, class: "block font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: form_field_classes %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, "Remember me", class: "text-gray-700" %>
      </div>
    <% end %>

    <div>
      <%= f.submit "Log in", class: form_button_classes %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
