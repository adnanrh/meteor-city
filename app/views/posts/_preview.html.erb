<div class="border rounded-lg p-4 shadow-sm bg-white mb-4">
  <!-- Post header and content -->
  <%= render "posts/post", post: post %>

  <!-- Like Button -->
  <div class="mt-3 flex justify-between items-center text-sm text-gray-600 px-2">
  <%= render "likes/button", post: post %>
  </div>

  <!-- Like & Comment Count -->
  <div class="mt-2 text-sm text-gray-600">
  <span><%= pluralize(post.likes.count, "Like") %></span>
  •
  <span><%= pluralize(post.comments.count, "Comment") %></span>
  •
  <span><%= link_to "View post", post_path(post), class: "text-xs text-blue-600 hover:underline" %></span>
  </div>
</div>
