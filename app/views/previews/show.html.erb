<h1 class="text-2xl font-bold">Profile Preview</h1>
<%= profile_picture_for(@user) %>
<p>Username: <%= @user.username %></p>
<p>Display Name: <%= @user.display_name %></p>
<p>Bio: <%= @user.bio %></p>

<!-- Mutual Friends -->
<%= render "shared/mutual_friends", mutual_friends: current_user.mutual_friends_with(@user) %>

<% if current_user.sent_requests.exists?(requested_id: @user.id) %>
  <button class="btn btn-secondary btn-disabled opacity-50 cursor-not-allowed" disabled>Request Pending</button>
<% else %>
  <%= button_to "Send Friend Request", friendship_requests_path(requested_id: @user.id), method: :post, remote: true, class: "btn btn-primary" %>
<% end %>
